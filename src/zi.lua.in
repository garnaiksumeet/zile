_DEBUG = true

-- Constants set by configure
PACKAGE = "@PACKAGE@"
PACKAGE_NAME = "@PACKAGE_NAME@"
PACKAGE_BUGREPORT = "@PACKAGE_BUGREPORT@"
VERSION = "@VERSION@"
PATH_DATA = "@pkgdatadir@"
PATH_DOCDIR = "@pkgdocdir@"
PATH_THEMEDIR = "@pkgthemedir@"
PATH_GRAMMARDIR = "@pkggrammardir@"

-- Remove current directory from package search path
package.path = package.path:gsub (";%./%?.lua;", ";")
package.path = package.path:gsub ("^%./%?.lua;", "")
package.path = package.path:gsub (";%./%?.lua$", "")

package.path = PATH_DATA .. "/?/init.lua;" .. package.path
package.path = PATH_DATA .. "/?.lua;" .. package.path
require "loadlua"


local function err(err)
  term_close ()
  print ("Internal error.  Please report this bug with steps to reproduce the problem")
  print (debug.traceback(err, 2))
end

xpcall (main, err)
