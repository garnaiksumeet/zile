-- Constants set by configure
PROGRAM           = "zz"
PROGRAM_NAME      = "Zz"
PACKAGE           = "@PACKAGE@"
PACKAGE_NAME      = "@PACKAGE_NAME@"
PACKAGE_BUGREPORT = "@PACKAGE_BUGREPORT@"
VERSION           = "@VERSION@"
PATH_DATA         = "@zzdatadir@"
PATH_DOCDIR       = "@pkgdocdir@"

-- Remove current directory from package search path
package.path = package.path:gsub (";%./%?.lua;", ";")
package.path = package.path:gsub ("^%./%?.lua;", "")
package.path = package.path:gsub (";%./%?.lua$", "")

package.path = "@zzdatadir@/?.lua;@pkgdatadir@/?.lua;" .. package.path

-- Load external code
require "std" -- load std
require_version ("std", "27") -- check version of std now we have require_version
require "strict" -- optional stdlib module
posix      = require_version ("posix", "5.1.23")
curses     = require "curses" -- part of luaposix
rex_gnu    = require_version ("rex_gnu", "2.7.1", nil, "[%S]+%s*([%S]+)")
require_version ("alien", "0.7.0")

-- Load Zile modules
require "lib"
require "astr"
require "estr"
require "history"
