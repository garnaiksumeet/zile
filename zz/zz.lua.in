require "term_redisplay"
require "callbacks"
require "commands"
require "tbl_vars"
require "keymaps"


local function err (err)
  term_close ()
  print ("Internal error.  Please report this bug with steps to reproduce the problem")
  print (debug.traceback(err, 2))
  os.exit (2)
end

xpcall (main, err)
